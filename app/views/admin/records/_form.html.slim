= render 'shared/error_messages', object: f.object
.jrf-article-item.mdl-grid.mdl-shadow--2dp
  .mdl-cell.mdl-cell--12-col.jrf-title-col
    .mdl-textfield.mdl-js-textfield.jrf-title-textfield
      = f.input :title, label: false, input_html: { class:'mdl-textfield__input', id: 'title-field'}
      label.mdl-textfield__label for="title-field"  標題
  .mdl-cell.mdl-cell--4-col
    .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
      = f.association :issue, label: false, label_method: :name, value_method: :id, include_blank: false, input_html: { class:'mdl-textfield__input', id: 'issue-field' }
      label.mdl-textfield__label for="issue-field"  案名
  .mdl-cell.mdl-cell--8-col
    .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
      = f.association :keywords, label: false, collection: Keyword.all, input_html: { class: 'chosen-select mdl-textfield__input', id: 'keywords-field' }
      label.mdl-textfield__label for="keywords-field"  關鍵字
  .mdl-cell.mdl-cell--4-col
    .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
      = f.input :identifier, label: false, input_html: { class:'mdl-textfield__input', id: 'identifier-field'}
      label.mdl-textfield__label for="identifier-field"  編號
  .mdl-cell.mdl-cell--4-col
