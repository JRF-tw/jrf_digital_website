  .mdl-cell.mdl-cell--3-col
    .mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
      = f.association :language, label: false, label_method: :name, value_method: :id, include_blank: false, input_html: { class:'mdl-textfield__input', id: 'language-field' } 
      label.mdl-textfield__label for="language-field"  語言
